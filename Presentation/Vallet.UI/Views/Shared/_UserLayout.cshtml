<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg">

<head>

    <meta charset="utf-8">
    <title>Site Borç Yönetimi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium" name="description">
    <meta content="Themesbrand" name="author">
    <link rel="shortcut icon" href="~/velzon/assets/images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/velzon/assets/libs/multi.js/multi.min.css">
    @*     <link rel="stylesheet" href="~/velzon/assets/libs/@tarekraafat/autocomplete.js/css/autoComplete.css"> *@
    <script src="~/velzon/assets/js/layout.js"></script>
    <link href="~/velzon/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/velzon/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="~/velzon/assets/css/app.min.css" rel="stylesheet" type="text/css">
    <link href="~/velzon/assets/css/custom.min.css" rel="stylesheet" type="text/css">

</head>

<body>
    <div id="layout-wrapper">
        <header id="page-topbar">
            <div class="layout-width">
                <div class="navbar-header">
                    <div class="d-flex">
                        <!-- LOGO -->

                        <button type="button"
                                class="btn btn-sm px-3 fs-16 header-item vertical-menu-btn topnav-hamburger"
                                id="topnav-hamburger-icon">
                            <span class="hamburger-icon">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
                        </button>

                        <!-- App Search-->

                    </div>
                    <div class="d-flex align-items-center">
                        <form class="app-search d-none d-md-block">
                            <div class="ms-sm-3 header-item ">
                                <div class="input-group">
                                    <div class="input-group-text rounded-pill">
                                        <div class="position-relative ">
                                            <input type="text" class="form-control "
                                                   placeholder="Kimlik Numarası,Pasaport Numarası,Telefon Numarası..."
                                                   autocomplete="off" id="search-options" value="">
                                            <span class="mdi mdi-magnify search-widget-icon"></span>
                                            <span class="mdi mdi-close-circle search-widget-icon search-widget-icon-close d-none"
                                                  id="search-close-options"></span>

                                        </div>

                                        <button type="button"
                                                class="btn rounded-pill btn-info waves-effect waves-light">
                                            ARA
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="dropdown d-md-none topbar-head-dropdown header-item">
                            <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle"
                                    id="page-header-search-dropdown" data-bs-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                <i class="bx bx-search fs-22"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end p-0"
                                 aria-labelledby="page-header-search-dropdown">
                                <form class="p-3">
                                    <div class="form-group m-0">
                                        <div class="input-group">
                                            <input type="text" class="form-control"
                                                   placeholder="Kimlik Numarası,Pasaport Numarası,Telefon Numarası ..."
                                                   aria-label="Recipient's username">
                                            <button class="btn btn-primary" type="submit">
                                                <i class="mdi mdi-magnify"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="dropdown ms-sm-2 topbar-user">
                            <a alt="Bildirimler">
                                <span class="d-flex flex-column align-items-center">
                                    <i class='ri ri-notification-2-fill fs-22'></i>
                                    <span class="d-none d-xl-inline-block  fw-medium user-name-text">Bildirimler</span>
                                </span>
                            </a>

                        </div>
                        <div class="dropdown ms-sm-3 topbar-user">
                            <a alt="Panel Sohbet">
                                <span class="d-flex flex-column align-items-center">
                                    <i class=' ri-folder-user-fill fs-22'></i>
                                    <span class="d-none d-xl-inline-block fw-medium user-name-text">
                                        Panel
                                        Sohbet
                                    </span>
                                </span>
                            </a>
                        </div>
                        <div class="dropdown ms-sm-3 topbar-user">
                            <a alt="Ekstra TV">
                                <span class="d-flex flex-column align-items-center">
                                    <i class='ri ri-computer-line fs-22'></i>
                                    <span class="d-none d-xl-inline-block fw-medium user-name-text">
                                        Ekstra
                                        TV
                                    </span>
                                </span>
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="app-menu navbar-menu">
            <!-- LOGO -->
            <div class="navbar-brand-box">
                <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover"
                        id="vertical-hover">
                    <i class="ri-record-circle-line"></i>
                </button>
            </div>
            <div class="p-4 mb-0">
                <div class="d-flex text-align-center">
                    <img class="rounded-circle header-profile-user" src="~/velzon/assets/images/users/user.jpeg"
                         height="50" alt="Emre">
                    <div class="overflow-hidden">
                        <span class="d-none d-xl-block ms-1 fs-12 text-white user-name-text">Hoşgeldin,</span>
                        <span class="d-none d-xl-block ms-1 fs-12 text-white user-name-sub-text">EMRE</span>
                        <span class="d-none d-xl-block ms-1 fs-12 text-white user-name-sub-text">(Mühendis)</span>
                    </div>
                </div>
            </div>
            <div id="scrollbar">
                <div class="container-fluid ">

                    <div id="two-column-menu">
                    </div>
                    <ul class="navbar-nav" id="navbar-nav">
                        <li class="menu-title"><span data-key="t-menu">GENEL MENÜ</span></li>
                        <li class="nav-item">
                            <a class="nav-link menu-link" target="_blank">
                                <i class="bx bx-home-heart"></i> <span data-key="t-landing">Ana Sayfa</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link menu-link" href="#tourReservation" data-bs-toggle="collapse"
                               role="button" aria-expanded="false" aria-controls="tourReservation">
                                <i class="mdi mdi-transit-connection-variant"></i> <span data-key="t-dashboards">
                                    Kullanıcı Bilgileri
                                </span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link menu-link" href="#customerManagement" data-bs-toggle="collapse"
                               role="button" aria-expanded="false" aria-controls="customerManagement">
                                <i class="bx bx-id-card"></i> <span data-key="t-dashboards">Borç Görüntüleme</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link menu-link" href="#operation" data-bs-toggle="collapse" role="button"
                               aria-expanded="false" aria-controls="operation">
                                <i class="ri ri-list-ordered"></i> <span data-key="t-dashboards">Ödeme İşlemleri</span>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="live-preview">
                                        <form class="row g-3">
                                            <div class="col-xl-12 col-lg-12">
                                                <div class="card">
                                                    <div class="card-header border-0">
                                                        <div class="row g-4">
                                                            @RenderBody()
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="vertical-overlay"></div> <!-- Silme -->
            <!-- Static Backdrop -->

            <div class="modal fade bs-example-modal-xl" tabindex="-1" role="dialog"
                 aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <img src="~/velzon/assets/images/products/img-11.png" alt="" class="img-fluid d-block" />
                    </div>
                </div>
            </div>
        </div>

    </div>

    <button onclick="topFunction()" class="btn btn-danger btn-icon" id="back-to-top">
        <i class="ri-arrow-up-line"></i>
    </button>
    <script src="~/velzon/assets/libs/prismjs/prism.js"></script>
    <script src="~/velzon/assets/libs/list.js/list.min.js"></script>
    <script src="~/velzon/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <script src="~/velzon/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/velzon/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/velzon/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/velzon/assets/libs/feather-icons/feather.min.js"></script>
    <script src="~/velzon/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="~/velzon/assets/js/plugins.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script type="text/javascript" src="~/velzon/assets/libs/choices.js/public/assets/scripts/choices.min.js"></script>
    <script type="text/javascript" src="~/velzon/assets/libs/flatpickr/flatpickr.min.js"></script>
    <script src="~/velzon/assets/libs/multi.js/multi.min.js"></script>
    <script src="~/velzon/assets/js/pages/form-advanced.init.js"></script>
    <script src="~/velzon/assets/js/pages/form-input-spin.init.js"></script>
    <script src="~/velzon/assets/js/app.js"></script>
    <script src="~/velzon/assets/js/pages/ecommerce-product-checkout.init.js"></script>
    </div>
</body>


</html>